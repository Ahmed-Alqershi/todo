datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  admin
  user
}

model User {
  id             String   @id @default(uuid())
  email          String   @unique
  hashed_password String
  role           Role     @default(user)
  created_at     DateTime @default(now())
  projects       Project[]
  tasks          Task[]
}

model Project {
  id          String   @id @default(uuid())
  user        User     @relation(fields: [user_id], references: [id])
  user_id     String
  title       String
  description String?
  created_at  DateTime @default(now())
  tasks       Task[]
}

model Task {
  id          String   @id @default(uuid())
  project     Project  @relation(fields: [project_id], references: [id])
  project_id  String
  owner       User     @relation(fields: [user_id], references: [id])
  user_id     String
  title       String
  description String?
  priority    Int
  criticality Int
  deadline    DateTime?
  status      String
  created_at  DateTime @default(now())
}
